      <rico:generalDescription rdf:parseType="Literal">
         <html:div xml:lang="fr">
            <h4>Organisation interne ou généalogie</h4>
            <html:p>Liste des directeurs généraux des collectivités locales :</html:p>
            <html:ul>
               <html:li>1960 : Georges Lahillonne</html:li>
               <html:li>1960-1963 : Jean-Émile Reymond</html:li>
               <html:li>1963-1969 : Gabriel Pallez</html:li>
               <html:li>1969-1970 : Jean Brenas</html:li>
               <html:li>1970-1971 : Jacques Millot</html:li>
               <html:li>1972-1974 : Maurice Paraf</html:li>
               <html:li>1974-1977 : Pierre Bolotte</html:li>
               <html:li>1977-1978 : Marcel Blanc</html:li>
               <html:li>1978-1982 : Pierre Richard</html:li>
